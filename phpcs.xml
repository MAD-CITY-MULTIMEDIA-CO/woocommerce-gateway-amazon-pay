<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards">
	<!-- Process everything in the project -->
	<file>.</file>

	<!-- But only files with a php extension -->
	<arg name="extensions" value="php" />

	<!-- Exclude paths -->
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>

	<!-- Configs -->
	<config name="minimum_supported_wp_version" value="4.7" />
	<!-- Check for cross-version support for PHP 5.6 and higher. -->
	<config name="testVersion" value="5.6-" />

	<!-- Rules -->
	<rule ref="WooCommerce-Core">
		<!-- TODO: Use full ruleset, fix these later. -->
		<exclude name="WordPress.Security.NonceVerification"/>
		<exclude name="WordPress.Security.EscapeOutput"/>
		<exclude name="WordPress.Security.ValidatedSanitizedInput"/>
		<exclude name="WordPress.WP.I18n.MissingTranslatorsComment"/>
		<exclude name="Squiz.Commenting"/>
		<exclude name="Generic.Commenting"/>
		<exclude name="WordPress.PHP.DiscouragedPHPFunctions.urlencode_urlencode"/>
		<exclude name="WordPress.WP.GlobalVariablesOverride.Prohibited"/>
		<exclude name="WordPress.PHP.DiscouragedPHPFunctions.obfuscation_base64_decode"/>
		<exclude name="WordPress.PHP.DiscouragedPHPFunctions.obfuscation_base64_encode"/>
	</rule>
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="woocommerce-gateway-amazon-payments-advanced"/>
			</property>
		</properties>
	</rule>
	<rule ref="PHPCompatibility">
		<exclude-pattern>tests/</exclude-pattern>
		<!-- TODO: Use full ruleset, fix these later. -->
		<exclude name="PHPCompatibility.Variables.ForbiddenGlobalVariableVariable.NonBareVariableFound"/>
		<exclude name="PHPCompatibility.Variables.RemovedPredefinedGlobalVariables.http_raw_post_dataDeprecatedRemoved"/>
	</rule>
	<rule ref="WordPress.Files.FileName.InvalidClassFileName">
		<exclude-pattern>includes/**/abstract-*.php</exclude-pattern>
		<exclude-pattern>tests/*</exclude-pattern>
	</rule>
	<rule ref="Generic.Commenting">
		<exclude-pattern>tests/</exclude-pattern>
	</rule>
</ruleset>
